<Window x:Class="DevTricks.Views.MainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevTricks.Views"
        mc:Ignorable="d"
        xmlns:mainWindow="clr-namespace:DevTricks.ViewModels.MainWindow;assembly=DevTricks.ViewModels"
        xmlns:converters="clr-namespace:DevTricks.Views.Converters"
        
        Title="{Binding Title, Mode=OneTime}" 
        Left="{Binding Left, Mode=TwoWay}"
        Top="{Binding Top, Mode=TwoWay}"
        Height="{Binding Height, Mode=TwoWay}" 
        Width="{Binding Width, Mode=TwoWay}"
        WindowState="{Binding IsMaximized, Mode=TwoWay, Converter={x:Static converters:BoolToWindowStateConverter}}"
        
        d:DataContext="{d:DesignInstance mainWindow:MainWindowViewModel}"
        >
    <Grid>

    </Grid>
</Window>
